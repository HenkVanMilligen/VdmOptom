@using VDMOptomitrists.Components.NavMenu
@using VDMOptomitrists.ViewModels.NavMenu

@{
    var menuVisibleClass = _menuVisible ? "" : "hidden";
    var menuClosedClass = _menuVisible ? "hidden" : "";
}
<div class="bg-gray-900 h-48">
    <div class="flex justify-between px-8 py-4">
        <img class="" src="images/logo-150.jpg" alt="Logo" />
        @* <div class="bg-red-500 pb-11/12 " >

            </div> *@


        <div class="align-top  md:hidden">
            <button @onclick="ToggleMenu" class="focus:outline-none">

                <div class="@($"{ menuClosedClass } ")">
                    <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Bars" Class="text-white" />
                </div>
                <div class="@($"{ menuVisibleClass }")">
                    <Icon Name="@("fa-times")" Class="text-white" />
                </div>
            </button>
        </div>
    </div>
    <div>
        <ul class="flex flex-col bg-gray-100  md:space-x-4 md:bg-transparent  @($"{ menuVisibleClass }  ") ">
            <MenuButton ButtonType="@ViewModels.NavButtonType.NavLinkMenuItem"
                ButtonModel="@(new LinkModel("/", "home" ))" />

            <MenuButton ButtonType="@ViewModels.NavButtonType.DropdownMenuItem"
                ButtonModel="@(new LinkModel("", "about"))" NavMenuSubLinks="@aboutLinks" />

            <MenuButton ButtonType="@ViewModels.NavButtonType.NavLinkMenuItem"
                ButtonModel="@(new LinkModel("/KidsVision", "kids vision" ))" />

            <MenuButton ButtonType="@ViewModels.NavButtonType.NavLinkMenuItem"
                ButtonModel="@(new LinkModel("/Promotions", "promotions" ))" />

            <MenuButton ButtonType="@ViewModels.NavButtonType.DropdownMenuItem"
                ButtonModel="@(new LinkModel("", "forms"))" NavMenuSubLinks="@formsLinks" />

            <MenuButton ButtonType="@ViewModels.NavButtonType.NavLinkMenuItem"
                ButtonModel="@(new LinkModel("/ContactUs", "contact us" ))" />

            <MenuButton ButtonType="@ViewModels.NavButtonType.NavLinkMenuItem"
                ButtonModel="@(new LinkModel("/Blog", "blog" ))" />
        </ul>
    </div>
</div>



@code {
    private bool _menuVisible = false;

    private List<LinkModel> aboutLinks = new List<LinkModel>
    {
        new LinkModel("/MeetTheTeam", "Meet The Team")

    };

    private List<LinkModel> formsLinks = new List<LinkModel>
    {
        new LinkModel("/PatientForms", "Patient Forms")

    };

    private void ToggleMenu()
    {
        _menuVisible = !_menuVisible;

    }

}
