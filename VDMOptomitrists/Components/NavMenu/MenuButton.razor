@using System.Globalization
@using ViewModels
@using ViewModels.NavMenu


<div class="text-gray-800 lg:mr-6 lg:mb-6">
    @switch (ButtonType)
    {
        case NavButtonType.NavLinkMenuItem:
            <NavLink class="block lg:w-full h-8 lg:h-10 px-6 py-1 capitalize lg:uppercase hover:bg-gray-200 lg:bg-vdm-menugreen lg:hover:bg-gray-900
                     lg:text-white lg:border-b-4 lg:border-gray-900" href="@ButtonModel.Href">
                @ButtonModel.LinkName
            </NavLink>
            break;
        case NavButtonType.DropdownMenuItem:
            <DropdownMenuItemWithDropdown ButtonModel="@ButtonModel" NavMenuLinks="@NavMenuSubLinks" />
            <HoverDropdownMenuItem ButtonModel="@ButtonModel" NavMenuLinks="@NavMenuSubLinks" />
            break;
        default:
            break;
    }
</div>



